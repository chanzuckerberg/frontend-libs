{
  "name": "frontend-libs",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "scripts/build.sh",
    "build:ts": "tsc --build",
    "check-ts-references": "yarn run --silent update-ts-references --check || (echo 'Project references seem to be out of date. Run \"yarn update-ts-references\" and then \"yarn lint:fix\".' && exit 1)",
    "clean": "rimraf 'packages/*/build' '**/*.tsbuildinfo'",
    "lint": "eslint --ext=js,jsx,ts,tsx,json .",
    "lint:fix": "yarn run lint --fix",
    "prepare": "yarn build",
    "pretest": "yarn build",
    "test": "yarn test:only",
    "test:only": "jest",
    "update-ts-references": "update-ts-references"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5",
    "update-ts-references": "^1.1.0"
  }
}
