{
  "name": "frontend-libs",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "scripts/build.sh",
    "build:ts": "tsc --build",
    "check-ts-references": "yarn run --silent update-ts-references --check || (echo 'Project references seem to be out of date. Run \"yarn update-ts-references\" and then \"yarn lint:fix\".' && exit 1)",
    "clean": "rimraf 'packages/*/build' '**/*.tsbuildinfo'",
    "lint": "eslint --ext=js,jsx,ts,tsx,json .",
    "lint:fix": "yarn run lint --fix",
    "prepack": "yarn build",
    "publish-packages": "yarn clean && lerna publish",
    "test": "yarn build && yarn test:only",
    "test:only": "jest",
    "update-ts-references": "update-ts-references"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@octokit/core": "^3.5.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/eslint": "^8.4.1",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-testing-library": "^5.0.4",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "update-ts-references": "^2.4.1"
  }
}
