{
  "name": "frontend-libs",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "scripts/build.sh",
    "build:ts": "tsc --build",
    "check-ts-references": "yarn run --silent update-ts-references --check || (echo 'Project references seem to be out of date. Run \"yarn update-ts-references\" and then \"yarn lint:fix\".' && exit 1)",
    "clean": "rimraf 'packages/*/build' '**/*.tsbuildinfo'",
    "lint": "eslint --ext=js,jsx,ts,tsx,json .",
    "lint:fix": "yarn run lint --fix",
    "prepack": "yarn build",
    "publish-packages": "yarn clean && lerna publish",
    "test": "yarn build && yarn test:only",
    "test:only": "jest",
    "update-ts-references": "update-ts-references"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@octokit/core": "^3.6.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@types/eslint": "^8.4.2",
    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.14.182",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-testing-library": "^5.4.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "lerna": "^4.0.0",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4",
    "update-ts-references": "^2.4.1"
  },
  "packageManager": "yarn@3.1.1"
}
