{
  "name": "edu-libs",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "scripts/build.sh",
    "build:ts": "tsc --build",
    "changed": "lerna changed",
    "check-ts-references": "npm run --silent update-ts-references --check || (echo 'Project references seem to be out of date. Run \"npm run update-ts-references\" and then \"npm run lint -- --fix\".' && exit 1)",
    "clean": "rimraf --glob 'packages/*/build' '**/*.tsbuildinfo'",
    "lint": "eslint --ext=js,jsx,ts,tsx,json .",
    "prepublishOnly": "npm run build",
    "publish-packages": "npm run clean && lerna publish",
    "test": "npm run build && npm run test:only",
    "test:only": "jest",
    "update-ts-references": "update-ts-references",
    "validate": "npm run build && npm run check-ts-references && npm run lint && npm run test:only"
  },
  "devDependencies": {
    "@chanzuckerberg/eslint-config-edu-js": "workspace:*",
    "@chanzuckerberg/eslint-config-edu-ts": "workspace:*",
    "@chanzuckerberg/prettier-config-edu": "workspace:*",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/eslint": "^8.37.0",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.192",
    "@types/react": "^18.0.33",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-testing-library": "^5.10.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lerna": "^6.6.1",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "update-ts-references": "^2.6.1"
  }
}
