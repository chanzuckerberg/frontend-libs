{
  "name": "frontend-libs",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "scripts/build.sh",
    "build:ts": "tsc --build",
    "check-ts-references": "yarn run --silent update-ts-references --check || (echo 'Project references seem to be out of date. Run \"yarn update-ts-references\" and then \"yarn lint:fix\".' && exit 1)",
    "clean": "rimraf 'packages/*/build' '**/*.tsbuildinfo'",
    "lint": "eslint --ext=js,jsx,ts,tsx,json .",
    "lint:fix": "yarn run lint --fix",
    "prepack": "yarn build",
    "publish-packages": "yarn clean && lerna publish",
    "test": "yarn build && yarn test:only",
    "test:only": "jest",
    "update-ts-references": "update-ts-references"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@octokit/core": "^3.5.1",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@types/eslint": "^8.2.0",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.177",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-testing-library": "^5.0.1",
    "jest": "^27.4.3",
    "lerna": "^4.0.0",
    "prettier": "^2.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2",
    "update-ts-references": "^2.4.1"
  }
}
